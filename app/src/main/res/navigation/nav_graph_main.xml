<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main.xml"
    app:startDestination="@id/listProductsFragment">

    <fragment
        android:id="@+id/listProductsFragment"
        android:name="co.jeliuska.pruebaqoopa.view.fragment.ListProductsFragment"
        android:label="fragment_list_products"
        tools:layout="@layout/fragment_list_products" >
        <action
            android:id="@+id/action_listProductsFragment_to_editProductFragment"
            app:destination="@id/editProductFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/editProductFragment"
        android:name="co.jeliuska.pruebaqoopa.view.fragment.EditProductFragment"
        android:label="EditProductFragment"
        tools:layout="@layout/fragment_edit_product" >
        <argument
            android:name="idProduct"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

</navigation>